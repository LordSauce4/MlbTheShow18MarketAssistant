{
    "name": "MLB The Show 18 Market Assistant",
    "version": "6",
    "description": "To use this: Click extension icon, log in to PSN, click \"Get Stubs Balance\", go back to Community Market and select a category.", 
    "background": {
        "scripts": [ "scripts/background.js" ]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/icon16.png",
            "24": "images/icon24.png",
            "32": "images/icon32.png"
        }
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "permissions": [ "tabs" ],
    "content_scripts": [
        {
            "matches": [ "*://mlb18.theshownation.com/community_market/listings?*" ],
            "css": [ "styles/listingsPageStyle.css" ],
            "js": [
                "scripts/jquery-3.3.1.min.js",
                "scripts/moment.js",
                "scripts/sorttable.js",
                "scripts/common.js",
                "scripts/listingsPageScript.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ "*://mlb18.theshownation.com/community_market/listings/*" ],
            "css": [ "styles/itemPageStyle.css" ],
            "js": [
                "scripts/jquery-3.3.1.min.js",
                "scripts/moment.js",
                "scripts/common.js",
                "scripts/itemPageScript.js"
            ],
            "run_at": "document_end"
        },
        {
            "matches": [ "*://mlb18.theshownation.com/orders" ],
            "js": [
                "scripts/jquery-3.3.1.min.js",
                "scripts/ordersPageScript.js"
            ],
            "run_at": "document_start"
        }
    ],
    "manifest_version": 2
}
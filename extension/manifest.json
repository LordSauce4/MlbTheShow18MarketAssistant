{
    "name": "MLB The Show 18 Market Assistant",
    "version": "2.2",
    "description": "Modify's theshownation.com's Community Market listings table to make it more useful for profitable trading",
    "background": {
        "scripts": [ "background.js" ]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "24": "icons/icon24.png",
            "32": "icons/icon32.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [ "tabs" ],
    "content_scripts": [
        {
            "matches": [ "https://mlb18.theshownation.com/community_market/listings*" ],
            "js": [ "jquery-3.3.1.min.js", "script.js" ],
            "run_at": "document_end"
        }
    ],
    "manifest_version": 2
}